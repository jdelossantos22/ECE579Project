<SimWindow>
    name:"simulation"
    content:content

    BoxLayout:
        cols:1
        BoxLayout:
            id:body
            size_hint_y:0.8
            pos_hint: {"top":1}

            TextInput:
                id: content
                size_hint_y:0.8
                pos_hint: {"top":1}
                font_size: (root.width**2 + root.height**2) / 17**4
    BoxLayout:
        cols:2       
        Button:
            size_hint_y:0.2
            font_size: (root.width**2 + root.height**2) / 17**4
            text: "Stop Simulation"
            on_release:
                root.manager.transition.direction = "left"
                root.stop()

        Button:
            size_hint_y:0.2
            font_size: (root.width**2 + root.height**2) / 17**4
            text: "Start Simulation"
            on_release:
                root.manager.transition.direction = "left"
                root.start()