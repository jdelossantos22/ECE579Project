<NumCustomersWindow>
    name:"number"

    numCustomers: numCustomers

    FloatLayout:
        cols:1
        size: root.width,root.height
        
        FloatLayout:
            size: root.width,root.height

            Label:
                size_hint: 0.5,0.12
                pos_hint: {"x":0, "top":0.8}
                text: "Number of Customers: "
                font_size: (root.width**2 + root.height**2) / 14**4

            TextInput:
                pos_hint: {"x":0.5, "top":0.8}
                size_hint: 0.4, 0.12
                id: numCustomers
                multiline: False
                input_filter:"int"
                font_size: (root.width**2 + root.height**2) / 14**4

    Button:
        pos_hint:{"x":0.3,"y":0.25}
        size_hint: 0.4, 0.1
        font_size: (root.width**2 + root.height**2) / 17**4
        text: "Submit"
        on_release:
            root.manager.transition.direction = "left"
            root.submit()

<NameWindow>
    name:"name"

    GridLayout:
        cols:1
        
        GridLayout:
            id:body
            cols:2
            size: root.width,root.height
            font_size: (root.width**2 + root.height**2) / 14**4
    
    Button:
        pos_hint:{"x":0.3,"y":0.25}
        size_hint: 0.4, 0.1
        font_size: (root.width**2 + root.height**2) / 17**4
        text: "Submit"
        on_release:
            root.manager.transition.direction = "left"
            root.submit()

            